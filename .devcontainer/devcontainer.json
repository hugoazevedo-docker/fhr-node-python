{
	"name": "fhr-node-python",
	"dockerComposeFile": "compose.yml",
	"containerEnv": {
		"DOCKER_USERNAME": "${localEnv:DOCKER_USERNAME}",
		"DOCKER_PASSWORD": "${localEnv:REGISTRY_TOKEN}"
	},
  	"initializeCommand": "echo ${REGISTRY_TOKEN} | docker login -u ${DOCKER_USERNAME} --password-stdin",

	"service": "fhr-node-python-hdi",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"customizations": {
		"vscode": {
			"extensions": [
				"PKief.material-icon-theme",
				"PKief.material-product-icons",
				"anseki.vscode-color"
			]
		}
	},
    "remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
    },
   	"mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
    ],
	"remoteUser": "vscode",
	// Run commands after the container is created.
	"postCreateCommand": "git config --global --add safe.directory ${containerWorkspaceFolder};"

}
